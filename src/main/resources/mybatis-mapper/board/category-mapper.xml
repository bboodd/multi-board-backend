<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hh.multiboarduserbackend.domain.category.CategoryRepository">
    <!--    category 컬럼    -->
    <sql id="categoryColumns">
          category_id
        , type_id
        , category_name
    </sql>

    <!--    전체 카테고리 리스트 조회    -->
    <select id="findAll" resultType="com.spring.multiboardbackend.domain.board.vo.CategoryVo">
        SELECT
            <include refid="categoryColumns"></include>
        FROM
            post_category
        WHERE
            type_id = #{type_id}
    </select>
</mapper>