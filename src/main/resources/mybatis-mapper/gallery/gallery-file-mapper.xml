<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hh.multiboarduserbackend.domain.gallery.file.GalleryFileRepository">
<!--    select 컬럼    -->
    <sql id="galleryFileColumns">
            gallery_file_id AS fileId
          , gallery_post_id AS postId
          , original_name
          , saved_name
          , saved_path
          , saved_size
          , delete_yn
    </sql>

<!--    insert 컬럼    -->
    <sql id="insertColumns">
            gallery_file_id
          , gallery_post_id
          , original_name
          , saved_name
          , saved_path
          , saved_size
          , delete_yn
    </sql>

    <!--    파일 리스트 저장    -->
    <insert id="saveAll" parameterType="list" useGeneratedKeys="true" keyProperty="fileId">
        INSERT INTO gallery_file (
        <include refid="insertColumns"></include>
        ) VALUES
        <foreach collection="list" item="file" separator=",">
            (
              #{file.fileId}
            , #{file.postId}
            , #{file.originalName}
            , #{file.savedName}
            , #{file.savedPath}
            , #{file.savedSize}
            , 0
            )
        </foreach>
    </insert>

    <!--    파일 단건 조회    -->
    <select id="findById" parameterType="long" resultType="com.hh.multiboarduserbackend.common.vo.FileVo">
        SELECT
            <include refid="galleryFileColumns"></include>
        FROM
            gallery_file
        WHERE
            gallery_file_id = #{galleryFileId}
            AND delete_yn = 0
    </select>

    <!--    게시글 아이디로 파일 리스트 조회    -->
    <select id="findAllByPostId" parameterType="long" resultType="com.hh.multiboarduserbackend.common.vo.FileVo">
        SELECT
            <include refid="galleryFileColumns"></include>
        FROM
            gallery_file
        WHERE
            gallery_post_id = #{galleryPostId}
            AND delete_yn = 0
        ORDER BY
            gallery_file_id ASC
    </select>

    <!--    파일 아이디 리스트로 파일 리스트 조회    -->
    <select id="findAllByIds" parameterType="list" resultType="com.hh.multiboarduserbackend.common.vo.FileVo">
        SELECT
            <include refid="galleryFileColumns"></include>
        FROM
            gallery_file
        WHERE
            delete_yn = 0
            AND gallery_file_id IN
            <foreach collection="list" item="fileId" open="(" separator="," close=")">
                #{fileId}
            </foreach>
        ORDER BY
            gallery_file_id ASC
    </select>

    <!--    파일 아이디 리스트로 파일 삭제    -->
    <delete id="deleteAllByIds" parameterType="list">
        DELETE
        FROM
            gallery_file
        WHERE
            gallery_file_id IN
            <foreach collection="list" item="fileId" open="(" separator="," close=")">
                #{fileId}
            </foreach>
    </delete>

<!--    썸네일용 첫 파일 조회    -->
    <select id="findFirstByPostId" parameterType="long" resultType="com.hh.multiboarduserbackend.common.vo.FileVo">
        SELECT
            <include refid="galleryFileColumns"></include>
        FROM
            gallery_file
        WHERE
            gallery_post_id = #{galleryPostId}
        ORDER BY
            gallery_file_id ASC
        LIMIT 1
    </select>

</mapper>